<div class="card card-width hoverable" data-id="{{_id}}">
    <div class="card-image">
        <img src="{{imgSrc}}" />
    </div>
    <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p>{{description}}</p>
    </div>
    <div class="card-action">
        <a href="{{link}}" target="_blank">Read Full Article</a>
    </div>
</div>